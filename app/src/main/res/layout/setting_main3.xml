<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:nestedScrollingEnabled="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ff606060">

        <TextView
            android:id="@+id/text1"
            android:text="알림 설정"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:autoText="false"
            style="@style/Base.TextAppearance.AppCompat.Inverse"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="22dp" />

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="설정저장 및 닫기"
            android:textColor="#000000" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView66"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/colorAccent"
            android:text=""
            android:textColor="#000000" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ff959292"
        android:id="@+id/layout"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text4"
            android:text="푸시 알림 받을 게시판 선택"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:autoText="false"
            style="@style/Base.TextAppearance.AppCompat.Inverse"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="17dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxall"
            android:checked="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*표된 게시판은 열람권한이 제한되어 있기 때문에 권한이 없는 경우 푸시알림이 되지 않습니다."
        android:id="@+id/textView77"
        android:layout_gravity="center_horizontal"
        android:textSize="13dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ff959292">

        <TextView
            android:id="@+id/text2"
            android:text="게시판의 새글/새댓글 알림 설정"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Inverse"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="17dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모든 새글 알림"
                android:id="@+id/checkBox1"
                android:checked="true"
                android:layout_marginRight="15dp"/>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모든 댓글 알림"
                android:id="@+id/checkBox2"
                android:checked="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 글에 달린 모든 댓글 알림(동기화필요)"
                android:id="@+id/checkBox3"
                android:checked="false"
                android:clickable="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대댓글 알림(동기화필요)"
                android:id="@+id/checkBox4"
                android:checked="false"
                android:clickable="false"
                android:layout_marginRight="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 댓글 단 글의 새 댓글 알림(동기화필요)"
                android:id="@+id/checkBox5"
                android:checked="false"
                android:clickable="false" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ff959292">

        <TextView
            android:id="@+id/text3"
            android:text="기타 설정"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Inverse"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:gravity="center_vertical" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자 공지 알림"
                android:id="@+id/checkBox6"
                android:checked="true"
                android:layout_marginRight="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쪽지 알림(동기화필요)"
                android:id="@+id/checkBox7"
                android:checked="false"
				android:clickable="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소리알림"
                android:id="@+id/checkBox8"
                android:checked="true"
                android:layout_marginRight="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진동알림"
                android:id="@+id/checkBox9"
                android:checked="true" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="설정 저장 및 닫기"
        android:id="@+id/button3"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:layout_marginBottom="80dp" />

</LinearLayout>
</ScrollView>